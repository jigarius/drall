{
    "name": "jigarius/drall",
    "description": "Drall is a command-line utility to run drush on multi-site Drupal installations.",
    "license": "GPL-3.0-only",
    "version": "2.0.0",
    "keywords": [
        "drupal",
        "drush",
        "drall",
        "cli"
    ],
    "authors": [
        {
            "name": "Jigar Mehta",
            "homepage": "https://jigarius.com/",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/jigarius/drall",
    "require": {
        "php": ">= 7.4",
        "amphp/process": "^1.1",
        "amphp/sync": "^1.4",
        "consolidation/site-alias": "^3.1",
        "drush/drush": "^11.0",
        "webflo/drupal-finder": "^1.2"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.28",
        "phpro/grumphp": "^1.13",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Drall\\": "src/"
        },
        "classmap": [
            "src/Drall.php"
        ]
    },
    "bin": [
        "bin/drall"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": "composer exec phpcs",
        "test": "XDEBUG_MODE=coverage composer exec phpunit"
    }
}
