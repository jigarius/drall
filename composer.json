{
    "name": "jigarius/drall",
    "description": "Drall is a utility to run drush on multi-site Drupal installations.",
    "version": "0.5.0",
    "homepage": "https://github.com/jigarius/drall",
    "license": "GPL-3.0-only",
    "keywords": ["drush", "drupal"],
    "authors": [
        {
            "name": "Jigar Mehta",
            "homepage": "https://jigarius.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">= 7.4",
        "drush/drush": "^11.0",
        "webflo/drupal-finder": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Drall\\": "src/"
        },
        "classmap": [
            "src/Drall.php"
        ]
    },
    "bin": [
        "bin/drall"
    ],
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "drupal/coder": "^8.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "composer exec phpcs",
        "test": "composer exec phpunit"
    }
}
